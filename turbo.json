{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "public/build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "api#dev": {
      "cache": false,
      "persistent": true,
      "env": ["PORT=8000"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "start": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "api#start": {
      "cache": false,
      "persistent": true,
      "env": ["PORT=8000"]
    }
  }
}
