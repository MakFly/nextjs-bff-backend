# Server
PORT=8003
NODE_ENV=development

# API Version (used in routes: /api/{version}/auth/*)
API_VERSION=v1

# Database
DATABASE_URL=./data.db

# JWT
JWT_SECRET=change-me-in-production-use-a-long-random-string
# Access token: 1 hour (matches BFF TOKEN_CONFIG.ACCESS_TOKEN_MAX_AGE)
JWT_ACCESS_EXPIRES_IN=3600
# Refresh token: 30 days (matches BFF TOKEN_CONFIG.REFRESH_TOKEN_MAX_AGE)
JWT_REFRESH_EXPIRES_IN=2592000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
